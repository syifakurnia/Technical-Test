// Nama Tes: TC-005 : Find pets by status 'pending'

// --- 1. Validasi Status Code 200 OK ---
pm.test("TC-005: Status code is 200 OK", function () {
    pm.response.to.have.status(200);
});

// --- 2. Validasi Struktur Respons ---
const responseJson = pm.response.json();
pm.test("TC-005: Response body is an Array", function () {
    // Memastikan body respons adalah array (daftar pet)
    pm.expect(responseJson).to.be.an('array');
});

// --- 3. Validasi Integritas Data (Semua Pet memiliki status 'pending') ---
// Kita akan melakukan iterasi (loop) pada setiap pet yang dikembalikan.
if (pm.response.code === 200 && Array.isArray(responseJson)) {
    
    // Gunakan 'every' untuk memastikan SEMUA elemen memenuhi kondisi
    const allPetsArePending = responseJson.every(pet => pet.status === "pending");
    
    pm.test("TC-005: All returned pets have status 'pending'", function () {
        pm.expect(allPetsArePending).to.be.true;
    });

    pm.test("TC-005: Array is not empty (at least one pet found)", function () {
        // Asumsi selalu ada data di Petstore. Jika array kosong, tes ini gagal.
        pm.expect(responseJson.length).to.be.above(0);
    });
}
