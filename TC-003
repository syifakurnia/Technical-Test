// Nama TC-003 - Boundary: Name with Hyphen Symbol

const expectedName = "one-two-three";

// --- 1. Validasi Status Code (Ekspektasi 200 OK) ---
pm.test("TC-003: Status code is 200 OK (Expected Pass)", function () {
    // Nama harusnya bisa menerima simbol hyphen
    pm.response.to.have.status(200);
});

// --- 2. Validasi Integritas Data ---
const responseJson = pm.response.json();
pm.test("TC-003: Data Integrity - Response Name matches Request Name", function () {
    // Memastikan nama yang dikembalikan oleh API sama persis dengan nama yang dikirim
    pm.expect(responseJson.name).to.eql(expectedName);
});

// --- 3. Simpan Pet ID untuk Chaining (Opsional) ---
// Simpan ID agar pet ini bisa dihapus nanti
const newPetId = responseJson.id;
pm.environment.set("tempPetId_103", newPetId); 

pm.test("TC-003: Pet ID " + newPetId + " created and stored for cleanup", function() {
    pm.expect(newPetId).to.be.a('number');
});

// Opsional: Log hasil
console.log("Pet with symbol in name created: " + responseJson.name);
